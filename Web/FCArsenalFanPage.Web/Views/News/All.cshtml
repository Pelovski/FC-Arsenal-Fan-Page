@model NewsListViewModel

@{
	this.ViewData["Title"] = "News";
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg mb-2">


</div>
<!-- end breadcrumb section -->

<!-- latest news -->
<div class="latest-news mt-150 mb-150">
	<div class="container">
		<div class="row">

			@foreach (var news in Model.News)
			{
				<div class="col-lg-4 col-md-6">
					<div class="single-latest-news">
							<img class="card-img-top" src="@news.ImageUrl" alt="Card image cap">
						    <div class="news-text-box">
							<h3><a asp-action="SingleNews" asp-route-id="@news.Id">@news.Title</a></h3>
							<p class="blog-meta">
								<span class="author"><i class="fas fa-user"></i> @news.UserName</span>
								<span class="date"><i class="fas fa-calendar"></i>@news.CreatedOn</span>
							</p>
							<p class="excerpt">@news.Details</p>
							<a href="single-news.html" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
						    </div>
					</div>
				</div>
			}

		<div class="row">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-center">
						<div class="pagination-wrap">
							<ul>
									<li class="@if(!Model.HasPreviousPage) {<text>disabled-page</text>}">
										<a asp-action="All" asp-route-id="@Model.PreviousPageNumber">Prev</a>
									</li>

									@for (int i = Model.PageNumber -3; i < Model.PageNumber; i++)
									{
										if(i > 0)
										{
											<li><a asp-action="All" asp-route-id="@i">@i</a></li>

										}
									}
									
									<li><a class="active" href="#">@Model.PageNumber</a></li>
									
									@for(int i = Model.PageNumber + 1; i < Model.PageNumber +4; i++)
									{
										if (i <= Model.PagesCount)
										{
											<li><a asp-action="All" asp-route-id="@i">@i</a></li>
										}	
									}

								<li class="@if(!Model.HasNextPage) {<text>disabled-page</text>}">
									<a asp-action="All" asp-route-id="@Model.NextPageNumber">Next</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<!-- end latest news -->