@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg mb-3" style="background-image: url('~/images/breadcrumb-bg.jpg');">
    <div class="container text-center">
        <h1 class="text-white">@ViewData["Title"]</h1>
        <h2 class="text-white">Enter your email to reset your password</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5 mb-5"> <!-- Добавени класове за отстояние -->
            <form method="post" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}