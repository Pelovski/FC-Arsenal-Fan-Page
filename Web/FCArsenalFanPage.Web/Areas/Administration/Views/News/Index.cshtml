@model IEnumerable<FCArsenalFanPage.Data.Models.News>

@{
    ViewData["Title"] = "News";
   
}

<h1 class="text-center mt-3 mb-4">News Dashboard</h1>

<p class="text-center">
    <a style="color:white" type="submit" class="btn btn-success mt-2 mb-3 ml-2 p-3" asp-area="" asp-controller="News" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Created by user
            </th>
            <th>
                Category
            </th>
            <th>
                Created on
            </th>
            <th>
               Modified on
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
@foreach (var item in Model.OrderByDescending(x => x.CreatedOn)) {
            var date = item.CreatedOn.ToString("dd/MM/yyyy");
            <tr>
            <td class="align-middle" style="width:25%">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => date)
            </td class="align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td class="align-middle">
                    <a class="btn btn-primary mt-2 mb-2 ml-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info mt-2 mb-2 ml-1"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger mt-2 mb-2 ml-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
