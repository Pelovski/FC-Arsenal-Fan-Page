@model IndexAdminDashboardViewModel

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.NewsCount</h3>

                <p>News Count</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a asp-controller="News" asp-action="Index" class="small-box-footer @(ViewContext.RouteData.Values["controller"]?.ToString() == "News" ? "active" : "")">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.ProductsCount<sup style="font-size: 20px"></sup></h3>

                <p>Products Count</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a asp-controller="Products" asp-action="Index" class="small-box-footer @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.UsersCount</h3>

                <p>User Registration</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-controller="ApplicationUsers" asp-action="Index" class="small-box-footer @(ViewContext.RouteData.Values["controller"]?.ToString() == "ApplicationUsers" ? "active" : "")">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.OrdersCount</h3>

                <p>Orders Processed</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a @* asp-controller="DashboardController" asp-action="Index" *@ class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->