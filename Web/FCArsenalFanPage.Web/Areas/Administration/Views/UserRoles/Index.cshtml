@model UserRolesViewModel

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-center mt-3 mb-4">Users Dashboard</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark text-center">
        <tr>
            <th>
               Username
            </th>
            <th>
               Email
            </th>
            <th>
                CreatedOn
            </th>
            <th>
                Role
            </th>

             <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach(var item in Model.Users)
        {
             <tr>
            <td class="align-middle" style="width:25%">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Roles)
            </td class="align-middle">

            <td class="align-middle">
                    <a class="btn btn-primary mt-2 mb-2 ml-1" asp-area="" asp-controller="News" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info mt-2 mb-2 ml-1"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger mt-2 mb-2 ml-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
